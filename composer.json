{
    "name": "williamespindola/abstract-http-client-guzzle",
    "type": "library",
    "description": "Abstract http client with guzzle",
    "keywords": [
        "williamespindola",
        "abstract-http-client-guzzle"
    ],
    "homepage": "https://github.com/williamespindola/abstract-http-client-guzzle",
    "license": "MIT",
    "authors": [
        {
            "name": "William Espindola",
            "email": "oi@williamespindola.com.br",
            "homepage": "https://williamespindola.com.br",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.1",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "WilliamEspindola\\AbstractHTTPClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WilliamEspindola\\AbstractHTTPClient\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
